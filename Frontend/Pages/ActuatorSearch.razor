@page "/ActuatorInfo"
@using Frontend.Entities
@inherits ActuatorInfoBase
<h3>ActuatorInfo</h3>

<RadzenRow>
    <RadzenTemplateForm TItem="string" Data=@SearchUid Submit=@SearchActuators>
        <RadzenRow>
            <RadzenColumn>
              <RadzenLabel Text="PCBA Uid"/>
              <RadzenText ShowUpDown="false" style="display: block" Name="pcbaUid" @bind-Value=@SearchUid class="w-100"/>
            </RadzenColumn>
            <RadzenColumn>
                <RadzenButton ButtonType="ButtonType.Submit" Text="Search"></RadzenButton>
            </RadzenColumn>
        </RadzenRow>
    </RadzenTemplateForm>
</RadzenRow>

@if (actuators.Count > 0) {
    <RadzenRow>
        <RadzenDataGrid TItem="Actuator" Data="@actuators">
            <Columns>
                <RadzenDataGridColumn TItem="Actuator" Property="PCBA.PCBAUid" Title="UID"></RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Actuator" Property="SerialNumber" Title="Serial Number"></RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Actuator" Property="WorkOrderNumber" Title="Work Order Number"></RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="Actuator" Property="PCBA.ManufacturerNumber" Title="Manufacturer Number"></RadzenDataGridColumn>
            </Columns>
        </RadzenDataGrid>
    </RadzenRow>
}