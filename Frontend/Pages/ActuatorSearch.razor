@page "/ActuatorSearch"
@using Frontend.Entities
@using Frontend.Components
@inherits ActuatorSearchBase
<h2>Search For Actuator</h2>

<RadzenRow JustifyContent="JustifyContent.SpaceBetween">
    <RadzenTemplateForm TItem="Actuator" Data="@SearchActuator" Submit="@SearchActuators" Style="width: 90%;">

        <RadzenRow Style="margin-bottom: 32px;" JustifyContent="JustifyContent.SpaceBetween" AlignItems="AlignItems.End">
            <RadzenRow>        
                <RadzenColumn Size="10">
                    <RadzenRow Style="margin-bottom: 10px; border-bottom: #3a3d41; border-bottom-width: thin; border-bottom-style: solid;">
                        <RadzenText TextStyle="TextStyle.H6" >Actuator Parameters</RadzenText>
                    </RadzenRow>
                    <RadzenRow>
                        <RadzenColumn>
                            <RadzenLabel Text="Workorder Number"/>
                            <RadzenNumeric ShowUpDown="false" style="display: block" Name="WorkOrderNumber" @bind-Value=@SearchActuator.WorkOrderNumber class="w-100"/>
                        </RadzenColumn>
                        <RadzenColumn>
                            <RadzenLabel Text="Serial Number"/>
                            <RadzenNumeric ShowUpDown="false" style="display: block" Name="SerialNumber" @bind-Value=@SearchActuator.SerialNumber class="w-100"/>
                        </RadzenColumn>
                        <RadzenColumn>
                            <RadzenLabel Text="Article Name"/>
                            <RadzenTextBox ShowUpDown="false" style="display: block" Name="ArticleName" @bind-Value=@SearchActuator.ArticleName class="w-100"/>
                        </RadzenColumn>
                        <RadzenColumn>
                            <RadzenLabel Text="Article Number"/>
                            <RadzenTextBox ShowUpDown="false" style="display: block" Name="ArticleNumber" @bind-Value=@SearchActuator.ArticleNumber class="w-100"/>
                        </RadzenColumn>
                        <RadzenColumn>
                            <RadzenLabel Text="Communication Protocol"/>
                            <RadzenTextBox ShowUpDown="false" style="display: block" Name="CommunicationProtocol" @bind-Value=@SearchActuator.CommunicationProtocol class="w-100"/>
                        </RadzenColumn>
                        <RadzenColumn>
                            <RadzenLabel Text="Created Date Start"/>
                            <RadzenDatePicker ShowSeconds="false" ShowTime="true" DateFormat="yyyy/MM/dd/HH" style="display: block" Name="ProductionDateCode" @bind-Value=@SearchActuator.CreatedTimeStart class="w-100"/>
                        </RadzenColumn>
                        <RadzenColumn>
                            <RadzenLabel Text="Created Date End"/>
                            <RadzenDatePicker ShowSeconds="false" ShowTime="true" DateFormat="yyyy/MM/dd/HH" style="display: block" Name="ProductionDateCode" @bind-Value=@SearchActuator.CreatedTimeEnd class="w-100"/>
                        </RadzenColumn>
                    </RadzenRow>
                </RadzenColumn>
                </RadzenRow>  
            <RadzenRow>
                <RadzenColumn Size="10">
                    <RadzenRow Style="margin-bottom: 10px; border-bottom: #3a3d41; border-bottom-width: thin; border-bottom-style: solid;">
                        <RadzenText TextStyle="TextStyle.H6" >PCBA Parameters</RadzenText>
                    </RadzenRow>
                    <RadzenRow>
                        <RadzenColumn >
                            <RadzenLabel Text="Uid"/>
                            <RadzenTextBox style="display: block" Name="PcbaUid" @bind-Value="@SearchActuator.PCBA.PCBAUid" class="w-100"/>
                        </RadzenColumn>
                        <RadzenColumn>
                            <RadzenLabel Text="Item Number"/>
                            <RadzenTextBox ShowUpDown="false" style="display: block" Name="ItemNumber" @bind-Value=@SearchActuator.PCBA.ItemNumber class="w-100"/>
                        </RadzenColumn>
                        <RadzenColumn>
                            <RadzenLabel Text="Manufacturer Number"/>
                            <RadzenNumeric ShowUpDown="false" style="display: block" Name="ManufacturerNumber" @bind-Value=@SearchActuator.PCBA.ManufacturerNumber class="w-100"/>
                        </RadzenColumn>
                        <RadzenColumn>
                            <RadzenLabel Text="Production Date Code"/>
                            <RadzenNumeric ShowUpDown="false" style="display: block" Name="ProductionDateCode" @bind-Value=@SearchActuator.PCBA.ProductionDateCode class="w-100"/>
                        </RadzenColumn>
                        <RadzenColumn>
                            <RadzenLabel Text="Software"/>
                            <RadzenTextBox ShowUpDown="false" style="display: block" Name="Software" @bind-Value=@SearchActuator.PCBA.Software class="w-100"/>
                        </RadzenColumn>
                        <RadzenColumn>
                            <RadzenLabel Text="Configuration Number"/>
                            <RadzenNumeric ShowUpDown="false" style="display: block" Name="ConfigNo" @bind-Value=@SearchActuator.PCBA.ConfigNumber class="w-100"/>
                        </RadzenColumn>
                    </RadzenRow>
                </RadzenColumn>
                </RadzenRow>
        </RadzenRow>
        <RadzenRow>
            <RadzenButton ButtonType="ButtonType.Submit" Text="Search"/>
        </RadzenRow>
    </RadzenTemplateForm>
</RadzenRow>

<ActuatorTable Actuators="@actuators" OnActuatorSelected="@ShowActuatorDetails"/>